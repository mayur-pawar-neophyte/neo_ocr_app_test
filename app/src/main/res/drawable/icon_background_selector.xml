<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the icon is pressed or selected (turns white) -->
    <item android:state_pressed="true" android:drawable="@drawable/white_circle" />
    <item android:state_selected="true" android:drawable="@drawable/white_circle" />

    <!-- Default background (grey circle) -->
    <item android:drawable="@drawable/grey_circle" />
</selector>
