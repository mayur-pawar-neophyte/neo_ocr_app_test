<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background covering the entire screen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black -->
        </shape>
    </item>

    <!-- Transparent square in the middle -->
    <item
        android:left="30dp"
        android:right="30dp"
        android:top="70dp"
        android:bottom="350dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp"/>
            <stroke android:width="2dp"  android:color="#ADD8E6" /> <!-- White border for the square -->
        </shape>
    </item>
</layer-list>
